import java.util.Scanner;
public class Main {

	public static void main(String[] args) {

	Scanner scanner = new Scanner(System.in);
	
	String name ="";
	
	//while(name.isBlank()) {
		
	do{
		System.out.println("enter ur name: ");
		name= scanner.nextLine();
	}while(name.isBlank()) ;
	
	System.out.println("hello "+name);

}
}
